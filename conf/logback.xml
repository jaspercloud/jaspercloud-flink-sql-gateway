<configuration>

    <property name="PATTERN" value="%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level %logger{5} - %m%n"/>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>${PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- # This affects logging for both flink-sql-gateway and Flink -->
    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>

    <!-- Uncomment this if you want to only change flink-sql-gateway's logging -->
    <!--<logger name="com.ververica.flink.table.gateway" level="INFO">-->
        <!--<appender-ref ref="file"/>-->
    <!--</logger>-->
</configuration>
